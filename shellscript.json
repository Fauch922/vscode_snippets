{
  "Initialize Generic Bash Script": {
    "prefix": "init-bash-script",
    "body": [
      "#!/bin/bash",
      "#",
      "#     Usage: initialize generic bash script",
      "#",
      "#     Parameter: -n (specify the name of parameter",
      "#",
      "#     Changelog:",
      "#",
      "# V1.0        by masc",
      "# ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}: Initial Release",
      "#",
      "#==============================================================================",
      "#",
      "  ############################",
      "  # Declaration of functions #",
      "  ############################",
      "",
      "printgreen() {",
      "    printf \"%b\\n\" \"${GREEN}$*${NC}\"",
      "}",
      "",
      "printred() {",
      "    printf \"%b\\n\" \"${RED}$*${NC}\"",
      "}",
      "",
      "#==============================================================================",
      "#",
      "  #####################",
      "  # Initialize script #",
      "  #####################",
      "",
      "# Colours",
      "",
      "RED='\\033[0;31m'",
      "GREEN='\\033[0;32m'",
      "NC='\\033[0m' # No Color",
      "",
      "usage() { echo \"Usage: ${0} -n <parameter>\" 1>&2; exit 1; }",
      "",
      "",
      "#==============================================================================",
      "#",
      "  ############################",
      "  # Declaration of functions #",
      "  ############################",
      "",
      "",
      "#==============================================================================",
      "#",
      "  #############",
      "  # main part #",
      "  #############",
      "",
      "set -e",
	  "",
	  "",
      "exit 0",
      "#=============================================================================="
    ],
    "description": "Initialize Generic Bash Script"
  },
    "Bash getopts handler for -b": {
    "prefix": "getopts-generic",
    "body": [
      "while getopts \"b:\" o; do",
      "    case \"${o}\" in",
      "        b)",
      "            basedir=\"${OPTARG}\"",
      "            ;;",
      "        *)",
      "            usage",
      "            ;;",
      "    esac",
      "done",
      "shift $((OPTIND-1))",
      "",
      "if [[ -z \"${basedir}\" ]]; then",
      "    printred \"parameter -b not defined.\\n\"",
      "    usage",
      "fi"
    ],
    "description": "Generic Bash getopts handler"
  }
}